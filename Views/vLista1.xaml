<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="slunaSIIITC.Views.vLista1"
             Title="Inicio de Sesión">

    <ContentPage.Resources>
        <Style x:Key="estiloLabel" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextColor" Value="Blue"/>
            <Setter Property="TextColor" Value="Blue"/>


        </Style>
    </ContentPage.Resources>

        <VerticalStackLayout Spacing="20" Padding="20">
        <Label 
            Text="Inicio de sesión"
            FontSize="24"
            HorizontalOptions="Center" />

        <Image Source="https://revista.uisrael.edu.ec/images/uisrael.png"
               HeightRequest="100" />

        <!-- Entrada de usuario -->
        <Entry x:Name="txtUsuario"
               Placeholder="Usuario" />

        <!-- Entrada de contraseña -->
        <Entry x:Name="txtContrasena"
               Placeholder="Contraseña"
               IsPassword="True" />

        <!-- Botón para iniciar sesión -->
        <Button Text="Iniciar sesión"
                Clicked="btnIniciarSesion_Clicked" />

        <!-- Botón para registrarse -->
        <Button Text="Registrarse"
                Clicked="btnRegistrarse_Clicked"
                BackgroundColor="LightGray"
                TextColor="Black" />
    </VerticalStackLayout>
</ContentPage>
